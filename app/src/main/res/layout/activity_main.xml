<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    tools:context="com.example.wss.constraintlayout.MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:src="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="22dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        android:layout_marginBottom="22dp"
        tools:layout_constraintBottom_creator="1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.7万/月"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="22dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="双城国际"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="22dp"
        app:layout_constraintRight_toLeftOf="@+id/checkbox"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="127 m²"
        app:layout_constraintCenterY_toCenterY="@+id/activity_main"
        app:layout_constraintLeft_toLeftOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="7.3 元/m²·天"
        app:layout_constraintLeft_toRightOf="@+id/textView11"
        android:layout_marginStart="22dp"
        app:layout_constraintTop_toTopOf="@+id/textView11"
        app:layout_constraintBottom_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="精装"
        app:layout_constraintLeft_toRightOf="@+id/textView12"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@+id/textView12"
        app:layout_constraintBottom_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="王强"
        app:layout_constraintLeft_toLeftOf="@+id/textView8"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        android:layout_marginBottom="22dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日租房"
        app:layout_constraintLeft_toRightOf="@+id/textView14"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@+id/textView14"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        android:layout_marginBottom="22dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已租"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:layout_constraintRight_toLeftOf="@+id/checkbox"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        android:layout_marginBottom="22dp" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main" />
</android.support.constraint.ConstraintLayout>
